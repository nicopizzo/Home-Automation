<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:weightSum="100">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="20dp"
            android:text="@string/setting_garageEndpoint"/>

        <EditText
            android:id="@+id/garageEndpointTxt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="20dp"
            android:text="@string/setting_garageToken"/>

        <EditText
            android:id="@+id/garageTokenTxt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:gravity="center">

        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/settingsSaveBtn"
		    android:layout_gravity="center"
		    android:text="@string/setting_save"/>

        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/settingsCancelBtn"
		    android:layout_gravity="center"
		    android:text="@string/setting_cancel"/>
    </LinearLayout>
    
</LinearLayout>
